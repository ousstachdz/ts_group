<odoo>
    <record id="sale_order_inherit_form_greenskay" model="ir.ui.view">
        <field name="name">sale_order_inherit_form_greenskay</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='preview_sale_order']" position="before">
                <button name="project_sale_order" type="object" class="oe_stat_button" icon="fa-globe icon">
                    <div class="o_stat_info">
                        <field name="project_count" class="o_stat_value"/>
                        <span class="o_stat_text">Projets</span>
                    </div>
                </button>
                <button name="task_sale_order" type="object" class="oe_stat_button" icon="fa-globe icon">
                    <div class="o_stat_info">
                        <field name="task_count" class="o_stat_value"/>
                        <span class="o_stat_text">Taches</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>