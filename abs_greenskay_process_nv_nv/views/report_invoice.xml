<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="nv_report_invoice" model="ir.actions.report">
            <field name="name">Facture</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">abs_greenskay_process_nv_nv.invoice_report_main</field>
            <field name="report_file">abs_greenskay_process_nv_nv.invoice_report_main</field>
            <field name="print_report_name">'Facture-%s' % object.name</field>
            <field name="binding_model_id" ref="model_account_move" />
            <field name="binding_type">report</field>
        </record>


        <template id="nv_report_invoice_document">
            <t t-call="web.basic_layout">

                <style>
                    td {
                    border: 1px solid black;
                    }
                    p {
                    padding: 0!important;
                    margin:0!important;
                    }
                </style>
                <div t-attf-class="header">
                    <div name="left-upper-side">
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"
                            style="max-height: 120px;" alt="Logo" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-6" name="company_details">
                        <strong>
                            <t t-esc="o.company_id.name" />
                        </strong>
                        <p>Adresse : <t t-esc="o.company_id.partner_id.contact_address" /></p>
                        <p>Email : <t t-esc="o.company_id.partner_id.email" /></p>
                        <p>Tél : <t t-esc="o.company_id.partner_id.phone" /></p>
                        <br />
                        <p>R.C. : <t t-esc="o.company_id.partner_id.rc" /></p>
                        <p>NIF : <t t-esc="o.company_id.partner_id.nif" /></p>
                        <p>N° Art. : <t t-esc="o.company_id.partner_id.ai" /></p>
                        <p>NIS : <t t-esc="o.company_id.partner_id.nis" /></p>
                        <p>RIB: <t t-esc="o.company_id.partner_id.rib" /></p>
                        <!-- <p>Compte : <t t-esc="o.company_id.partner_id.compte" /></p> -->


                    </div>
                    <div class="col-6" name="client_details">
                        <div style="padding: 10px; border:1px solid black;">
                            <h5 class="d-inline">
                                Client:
                            </h5>
                            <t t-esc="o.partner_id.name" />

                            <p>R.C. : <t t-esc="o.partner_id.rc" /></p>
                            <p>NIF : <t t-esc="o.partner_id.nif" /></p>
                            <p>N° Art. : <t t-esc="o.partner_id.ai" /></p>
                            <p>NIS : <t t-esc="o.partner_id.nis" /></p>
                            <p>RIB: <t t-esc="o.partner_id.rib" /></p>
                            <!-- <p>Compte : <t t-esc="o.partner_id.compte" /></p> -->
                        </div>

                    </div>
                </div>


                <div class="mt-5">
                    <div class="row mb-5">
                        <div class="col-6" style="border: 1px solid black; padding: 5px;">
                            <h3>

                                <span>Facture N° :</span>
                                <span t-if="o.name != '/'" t-field="o.name" />
                            </h3>
                        </div>

                        <div class="col-6 text-end text-middle" name="invoice_date">
                            <strong>Date:</strong>
                            <span class="m-0" t-field="o.invoice_date" />
                        </div>
                    </div>
                    <div class="page">


                        <t t-set="display_discount"
                            t-value="any(l.discount for l in o.invoice_line_ids)" />

                        <table class="table table-sm o_main_table" name="invoice_line_table">
                            <thead style="background: #007e5d; color:white; width:100%!important;">
                                <tr>
                                    <th name="th_description" class="text-start">
                                        <span>Désignation</span>
                                    </th>
                                    <th name="th_quantity" class="text-end">
                                        <span>Qte</span>
                                    </th>
                                    <th name="th_priceunit"
                                        t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span>Prix HT</span>
                                    </th>
                                    <th name="th_price_unit" t-if="display_discount"
                                        t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span>Disc.%</span>
                                    </th>
                                    <th name="th_subtotal" class="text-end">
                                        <span>Prix TTC</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="current_subtotal" t-value="0" />
                                <t t-set="lines"
                                    t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)" />

                                <t t-foreach="lines" t-as="line">

                                    <t t-set="current_subtotal"
                                        t-value="current_subtotal + line.price_total" />
                                    <tr
                                        t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="line.display_type == 'product'"
                                            name="account_invoice_line_accountable">
                                            <td name="account_invoice_line_name">
                                                <span t-field="line.name"
                                                    t-options="{'widget': 'text'}" />
                                            </td>
                                            <td class="text-end">
                                                <span t-field="line.quantity" />
                                                <span t-field="line.product_uom_id"
                                                    groups="uom.group_uom" />
                                            </td>
                                            <td
                                                t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.price_unit" />
                                            </td>
                                            <td t-if="display_discount"
                                                t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.discount" />
                                            </td>

                                            <td class="text-end o_price_total">

                                                <span class="text-nowrap" t-field="line.price_total" />
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99">
                                                <span t-field="line.name"
                                                    t-options="{'widget': 'text'}" />
                                            </td>
                                            <t t-set="current_section" t-value="line" />
                                            <t t-set="current_subtotal" t-value="0" />
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99">
                                                <span t-field="line.name"
                                                    t-options="{'widget': 'text'}" />
                                            </td>
                                        </t>
                                    </tr>

                                    <t
                                        t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-end">
                                            <td colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix mb-4">
                            <div id="total" class="row">
                                <div
                                    t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                    <table class="table table-sm" style="page-break-inside: avoid;">

                                        <!--Tax totals-->
                                        <t t-set="tax_totals" t-value="o.tax_totals" />
                                        <t t-call="account.document_tax_totals" />


                                    </table>
                                </div>
                            </div>

                        </div>

                        <div style="page-break-inside: avoid;">
                            <div t-attf-class="row">
                                <strong>Arrêtée la présente facture à la somme de:</strong>
                                <span t-esc="o.currency_id.amount_to_text(o.amount_total)" />
                            </div>
                            <!-- <div style="text-align: right; margin-right: 20px;">
                                <strong>Signature:</strong>
                                <div>
                                    <img t-if="o.company_id.signature_img"
                                        t-att-src="image_data_uri(o.company_id.signature_img)"
                                        style="max-height: 170px; max-width:170px; " alt="signature" />
    
                                </div>
                            </div> -->
                        

                        </div>

                    </div>
                </div>


                <div t-attf-class="footer">

                    <div class="row">
                        <div class="col-12">
                            <img t-att-src="'/abs_greenskay_process_nv_nv/static/img/footer.png'"
                            style="height: 120px;" alt="Footer" />
                        </div>
                    </div>
                </div>


            </t>
        </template>


        <template id="abs_greenskay_process_nv_nv.invoice_report_main">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang" />
                    <t t-call="abs_greenskay_process_nv_nv.nv_report_invoice_document" t-lang="lang" />
                </t>
            </t>
        </template>


    </data>
</odoo>